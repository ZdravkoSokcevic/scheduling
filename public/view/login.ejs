<% include partials/header.ejs %>
<!-- <% include partials/nav.ejs %> -->

<div class="container my-5">
  <div class="row justify-content-center mb-5">
    <div class="col text-center">
      <img src="/images/tooth.png" alt="Logo" height="100">
      <h1 class="text-info">Dental Care</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-xs-12 col-md-6">
      <div class="card" id="login-card">
        <div class="card-body">
          <div class="card-title">
            <h3>Prijavi se</h3>
          </div>
          <form action="/login" method="POST">
            <div class="form-group">
              <label>Email</label>
              <input type="email" class="form-control" name="email"/>
            </div>
            <div class="form-group">
              <label>Lozinka</label>
              <input type="password" class="form-control" name="password"/>
            </div>
            <div class="row justify-content-around">
              <button type="button" class="btn btn-light" onclick="showRegister()">Nemate nalog?</button>
              <button type="submit" class="btn btn-info">Prijavi se</button>
            </div>
          </form>
        </div>
      </div>

      <div class="card" id="register-card">
        <div class="card-body">
          <div class="card-title">
            <h3>Registruj se</h3>
          </div>
          <form action="/register" method="POST">
            <div class="form-group">
              <label>Ime</label>
              <input type="text" class="form-control" name="first_name"/>
            </div>
            <div class="form-group">
              <label>Prezime</label>
              <input type="text" class="form-control" name="last_name"/>
            </div>
            <div class="form-group">
              <label>Email</label>
              <input type="email" class="form-control" name="email"/>
            </div>
            <div class="form-group">
              <label>Telefon</label>
              <input type="text" class="form-control" name="phone"/>
            </div>
            <div class="form-group">
              <label>Lozinka</label>
              <input type="password" class="form-control" name="password" />
            </div>
            <div class="form-group">
              <label>Ponovi lozinku</label>
              <input type="password" class="form-control" name="confirm_password"/>
            </div>
            <div class="row justify-content-around">
              <button type="button" class="btn btn-light" onclick="showLogin()">Imate nalog?</button>
              <button type="submit" class="btn btn-info">Registruj se</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center my-5">
    <a role="button" class="btn btn-light" href="/">Nazad na pocetnu</a>
  </div>
</div>

<% include partials/scripts.ejs %>
<script src="/javascripts/login.js"></script>
